{
	"name": "Clippings",
	"version": "1.0",
	"description": "Demonstrate screenshot functionality in the chrome.tabs api.",
	"background": {
		"persistent": false,
		"scripts": ["background.js"]
	},
	"browser_action": {
		"default_icon": "clippy.png",
		"default_title": "Take a screen shot!"
	},
	"options_page": "options.html",
	"permissions": [
		"activeTab",
		"downloads",
		"storage"
	],
	"manifest_version": 2
}